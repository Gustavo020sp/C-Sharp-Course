@model IEnumerable<SalesWebMvc.Models.Seller>

@{
	ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>


<a class="text-primary" asp-action="Create">Create New</a><br /><br />

<table class="table table-active table-hover">
	<thead>
		<tr>
			<th class="bg-primary text-dark">
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th class="bg-primary text-dark">
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th class="bg-primary text-dark">
				@Html.DisplayNameFor(model => model.BirthDate)
			</th>
			<th class="bg-primary text-dark">
				@Html.DisplayNameFor(model => model.BaseSalary)
			</th>
			<th class="bg-primary text-dark">
				@Html.DisplayNameFor(model => model.Department)
			</th>
			<th class="bg-primary text-dark"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(model => item.Name)
				</td>
				<td>
					@Html.DisplayFor(model => item.Email)
				</td>
				<td>
					@Html.DisplayFor(model => item.BirthDate)
				</td>
				<td>
					@Html.DisplayFor(model => item.BaseSalary)
				</td>
				<td>
					@Html.DisplayFor(model => item.DepartmentId)
				</td>
				<td>
					<a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">Edit |</a>
					<a class="text-primary" asp-action="Details" asp-route-id="@item.Id">Details |</a>
					<a class="text-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}		
	</tbody> 
</table>
