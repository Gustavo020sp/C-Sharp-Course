@model IEnumerable<SalesWebMvc.Models.Seller>

@{
	ViewData["Title"] = "Index";
}

<h1>Sellers</h1>

<p>
	<a class="text-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
	<thead>
		<tr>
			<th class="bg-primary">
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th class="bg-primary">
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th class="bg-primary">
				@Html.DisplayNameFor(model => model.BirthDate)
			</th>
			<th class="bg-primary">
				@Html.DisplayNameFor(model => model.BaseSalary)
			</th>
			<th class="bg-primary">
				@Html.DisplayNameFor(model => model.Department)
			</th>
			<th class="bg-primary"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BirthDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BaseSalary)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Department.Name)
				</td>
				<td>
					<a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a class="text-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a class="text-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
